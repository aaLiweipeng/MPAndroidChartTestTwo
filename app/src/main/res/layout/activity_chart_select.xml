<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartSelectActivity">

    <ImageView
        android:alpha="0.85"
        android:background="@drawable/bcp2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:alpha="0.9"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/ac_chartselect_ZZTScv"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="200dp">
                <LinearLayout
                    android:background="@android:color/darker_gray"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/zhuzhuangtushuang"
                        android:alpha="0.65"
                        android:scaleType="centerCrop"
                        android:layout_width="300dp"
                        android:layout_height="150dp"/>

                    <TextView
                        android:textColor="@android:color/white"
                        android:text="柱 状 图 ( 双 )"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:layout_height="50dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ac_chartselect_ZXTDcv"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="200dp">
                <LinearLayout
                    android:background="@android:color/darker_gray"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/zhexiantudan"
                        android:alpha="0.65"
                        android:scaleType="centerCrop"
                        android:layout_width="300dp"
                        android:layout_height="150dp"/>

                    <TextView
                        android:textColor="@android:color/white"
                        android:text="折 线 图 ( 单 )"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:layout_height="50dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ac_chartselect_ZXTScv"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="200dp">
                <LinearLayout
                    android:background="@android:color/darker_gray"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/zhexiantushuang"
                        android:alpha="0.65"
                        android:scaleType="centerCrop"
                        android:layout_width="300dp"
                        android:layout_height="150dp"/>

                    <TextView
                        android:textColor="@android:color/white"
                        android:text="折 线 图 ( 双 )"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:layout_height="50dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ac_chartselect_ZHTcv"
                android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="200dp">
                <LinearLayout
                    android:background="@android:color/darker_gray"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/zuhetu"
                        android:alpha="0.65"
                        android:scaleType="centerCrop"
                        android:layout_width="300dp"
                        android:layout_height="150dp"/>

                    <TextView
                        android:textColor="@android:color/white"
                        android:text="组 合 图"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:layout_height="50dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="45dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>